<div class="container">
  <h1>過去問データベース</h1>
  <p><%= flash.notice %></p>

  <p><%= link_to 'タグの新規作成', :new_admin_tag %></p>
  <h2>タグの一覧</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>タグ名</th>
        <th>過去問数</th>
        <th>作成日時</th>
      </tr>
    </thead>
  <% @tags.each do |tag| %>
    <tbody>
	    <td><%= link_to tag.name, [:admin, tag] %></td>
	    <td><%= tag.past_questions.count %></td>
      <td><%= tag.created_at %></td>
    </tbody>
  <% end %>
  </table>
  <%= will_paginate @tags %>
</div>
