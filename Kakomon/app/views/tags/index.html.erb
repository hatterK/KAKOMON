<div class="container">
  <% @page_title = "タグの一覧" %>
  <h1><%= @page_title %></h1>
  <% if flash.notice %><p><%= flash.notice %></p><% end %>
  <%= form_tag :search_tags, method: :get do %>
    <table>
      <tr>
        <th>タグ名　：　</th>
        <td><%= text_field_tag "name", params[:name] %></td>
        <td><%= submit_tag "検索" %></td>
      </tr>
    </table>
  <% end %>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>タグ名</th>
        <th>過去問数</th>
      </tr>
    </thead>
  <% @tags.each do |tag| %>
    <tbody>
      <td><%= link_to tag.name, tag %></td>
      <td><%= tag.past_questions.count %></td>
    </tbody>
  <% end %>
  </table>
  <%= will_paginate @tags %>
</div>
